# ipsec.conf - strongSwan IPsec configuration file

conn xauth-rsa-mode-config
    authby=xauthrsasig
    auto=add
    left=<%=            node[:strongswan][:ipsec][:private_ip] %>
    leftcert=serverCert.pem
    leftid=<%=          node[:strongswan][:ipsec][:local][:id] %>
    leftrsasigkey=%cert
    leftsubnet=<%=      node[:strongswan][:ipsec][:local][:subnet] %>
    leftfirewall=yes
    right=%any
    rightcert=clientCert.pem
    rightid=<%=         node[:strongswan][:ipsec][:remote][:id] %>
    rightrsasigkey=%cert
    rightsourceip=<%=   node[:strongswan][:ipsec][:remote][:sourceip] %>
    xauth=server

