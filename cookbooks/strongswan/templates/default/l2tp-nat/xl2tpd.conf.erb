[global]
ipsec saref = no

[lns default]
ip range = <%= node[:strongswan][:l2tp][:ip_min] %>-<%= node[:strongswan][:l2tp][:ip_max] %>
local ip = <%= node[:strongswan][:ipsec][:private_ip] %>
refuse chap = yes
refuse pap = yes
require authentication = yes
ppp debug = yes
pppoptfile = /etc/ppp/options.xl2tpd
length bit = yes
