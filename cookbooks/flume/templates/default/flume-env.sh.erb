export JRUBY_OPTS="--1.9"

<% if @classpath %>
export FLUME_CLASSPATH=<%= @classpath.join(":") %>
<% end %>

<% if @java_opts %>
export UOPTS="<%= @java_opts.join(" ") %>"
<% end %>

<% if @rubylib %>
export RUBYLIB="<%= @rubylib.join(":") %>"
<% end %>
