#!/bin/bash
exec 2>&1

export GRAPHITE_ROOT="<%=        @options[:home_dir] %>"
export GRAPHITE_CONF_DIR="<%=    @options[:conf_dir] %>"
export GRAPHITE_STORAGE_DIR="<%= @options[:data_dir] %>"
export PYTHONPATH="<%=           ::File.join(@options[:home_dir],'lib') %>"

cd   <%= @options[:pid_dir] %>
exec chpst -u <%= @options[:user] %> "<%= @options[:home_dir] %>/bin/carbon-cache.py"  --config="<%= @options[:conf_dir] %>/carbon.conf" --debug start

